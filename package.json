{
  "name": "canvas-demo",
  "version": "1.0.0",
  "description": "Canvas Demo.",
  "main": "index.ts",
  "scripts": {
    "vite": "vite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run server",
    "build": "cross-env MODE_ENV=true ./node_modules/.bin/vite build",
    "server": "./node_modules/.bin/vite --host"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "Canvas",
    "Graphic"
  ],
  "engines": {
    "node": ">= 14.0.0"
  },
  "author": "iaosee@outlook.com",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^11.15.54",
    "@types/stats.js": "^0.17.0",
    "cross-env": "^7.0.2",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.19.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.2"
  },
  "dependencies": {
    "@types/dat.gui": "^0.7.5",
    "dat.gui": "^0.7.7",
    "stats.js": "^0.17.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "tslint -c tslint.json --fix",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "./node_modules/.bin/prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "src/**/*.html": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
