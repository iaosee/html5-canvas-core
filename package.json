{
  "name": "canvas-demo",
  "version": "1.0.0",
  "description": "Canvas Demo.",
  "main": "index.ts",
  "scripts": {
    "vite": "vite",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run server",
    "build": "cross-env MODE_ENV=true ./node_modules/.bin/vite build",
    "server": "./node_modules/.bin/vite --host",
    "prepare": "husky install",
    "lint": "lint-staged"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "Canvas",
    "Graphic"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "author": "iaosee@outlook.com",
  "license": "ISC",
  "dependencies": {
    "@types/dat.gui": "^0.7.5",
    "dat.gui": "^0.7.9",
    "stats.js": "^0.17.0"
  },
  "devDependencies": {
    "@types/stats.js": "^0.17.0",
    "cross-env": "^7.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "husky": "^8.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ],
    "src/**/*.html": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "hooks": {
    "pre-commit": "lint-staged",
    "post-commit": "git update-index --again"
  }
}
